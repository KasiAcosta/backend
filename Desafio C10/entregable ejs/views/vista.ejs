<div class="jumbotron">
  <h1>Vista de Productos :)</h1>
  <br>

  <% if(hayProductos) { %>
  <div class="table-responsive">
      <table class="table table-dark">
          <tr>
            <th>id</th>
              <th>Nombre</th>
              <th>Precio</th>
              <th>URL</th>
          </tr>
          <% productos.forEach((producto) =>{ %>
          <tr>
              <td><%= producto.id %></td>
              <td><%= producto.title %></td>
              <td><%= producto.price %></td>
              <td><img width="50" src="<%= producto.thumbnail %>" ></td>
          </tr>
          <% }) %>
      </table>
  </div>
  <% } else{ %>
  <h3 class="alert alert-warning">No se encontraron productos</h3>
  <% } %>
  <br>
  <a href="/" type="button" class="btn btn-primary">Cargar un nuevo producto</a>
</div>
